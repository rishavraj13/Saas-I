generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

 model User {
  id        Int     @id   @default(autoincrement())
  email     String  @unique
  username  String  @unique
  password  String  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt  
 }


 model Invoice {
  id          String   @id @default(cuid())
  status      String   @default("Draft")
  invoiceNumber String
  currency    String
  fromName    String
  fromEmail   String
  fromAddress String
  toName      String
  toEmail     String
  toAddress   String
  date        DateTime
  due         String
  note        String?

  // ðŸ”¹ One-to-many relation with items
  items       Item[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id          String   @id @default(cuid())
  description String
  quantity    Int
  amount      Float
  rate        Float

  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
}
